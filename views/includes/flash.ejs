<% if (success && success.length) { %>
  <div class="d-flex justify-content-center mt-4">
    <div class="alert alert-success alert-dismissible fade show shadow rounded-3 text-center fs-6 py-3 px-4" 
         role="alert" style="max-width: 450px; width: 100%; font-weight: 500;">
      <%= success %>
      <button type="button" class="btn-close ms-2" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% } %>

<% if (error && error.length) { %>
  <div class="d-flex justify-content-center mt-4">
    <div class="alert alert-danger alert-dismissible fade show shadow rounded-3 text-center fs-6 py-3 px-4" 
         role="alert" style="max-width: 450px; width: 100%; font-weight: 500;">
      <%= error %>
      <button type="button" class="btn-close ms-2" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% } %>
